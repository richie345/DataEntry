<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dataentry.ochanya.com.dataentry.AgentReport"
    android:background="@drawable/bg"
    android:padding="10dp"
    >



    <LinearLayout
        android:id="@+id/input_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/rpt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="AGENT REPORT"
            android:textColor="#F9EBEB"
            android:textSize="30sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.016" />
        <View
            android:layout_width="0dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/rpt_by_des"
            android:layout_width="269dp"
            android:layout_height="47dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:ems="10"
            android:text="Report by Designation"
            android:textColor="#D81B60"
            android:textSize="12sp"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/rpt_simple"
            android:layout_width="269dp"
            android:layout_height="47dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:ems="10"
            android:text="Simple Report"
            android:textSize="12sp"
            android:textColor="#D81B60"
            />

    </LinearLayout>

</RelativeLayout>